# Backend defaults for docker-compose. Review docs/security/hardening-checklist.md before reusing in production.
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug
DATABASE_URL=postgresql://treazrisland:treazrisland@postgres:5432/treazrisland?schema=public
JWT_SECRET=dev-only-change-me-please-rotate-32
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d
PASSWORD_RESET_TTL=1h
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000

RATE_LIMIT_DEFAULT_POINTS=60
RATE_LIMIT_DEFAULT_DURATION=60
