PIXELLAB_API_KEY=local-dev-key
PIXELLAB_STYLE_ID=monkey-island-dev
PIXELLAB_BASE_URL=http://pixellab-mock:4010
PIXELLAB_CACHE_TTL=12h
PIXELLAB_TIMEOUT_MS=15000
PIXELLAB_ASSET_PREFIX=pixellab

SCREENSCRAPER_USERNAME=
