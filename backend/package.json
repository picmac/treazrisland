{
  "name": "treazrisland-backend",
  "version": "0.1.0",
  "description": "Fastify + Prisma backend for the TREAZRISLAND self-hosted portal.",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "prebuild": "npm run prisma:generate",
    "build": "tsc -p tsconfig.build.json",
    "lint": "npm run format:check",
    "format:check": "prettier --check \"src/config/env.ts\" \"src/routes/admin/romUploads.ts\" \"src/routes/player.ts\" \"src/routes/screenscraper.ts\" \"src/server.ts\" \"src/types/fastify.d.ts\" \"src/plugins/observability.ts\"",
    "format:write": "prettier --write \"src/config/env.ts\" \"src/routes/admin/romUploads.ts\" \"src/routes/player.ts\" \"src/routes/screenscraper.ts\" \"src/server.ts\" \"src/types/fastify.d.ts\" \"src/plugins/observability.ts\"",
    "test": "vitest",
    "prisma:generate": "node ./scripts/run-prisma-with-env.mjs generate",
    "prisma:migrate": "node ./scripts/run-prisma-with-env.mjs migrate dev && tsx prisma/migrate-reencrypt-mfa-secrets.ts",
    "prisma:migrate:deploy": "node ./scripts/run-prisma-with-env.mjs migrate deploy",
    "screenscraper:encrypt": "tsx scripts/encrypt-screenscraper-secret.ts",
    "prisma:seed:platforms": "tsx prisma/seed-platforms.ts",
    "retention:prune": "tsx scripts/retention/prune-rom-upload-audit.ts"
  },
  "dependencies": {
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/under-pressure": "^9.0.3",
    "@prisma/client": "^6.18.0",
    "argon2": "^0.44.0",
    "busboy": "1.6.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.1.0",
    "ipaddr.js": "^2.2.0",
    "ms": "^2.1.3",
    "pino": "^10.1.0",
    "postmark": "^4.0.5",
    "prisma": "^6.18.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/busboy": "1.5.4",
    "@types/estree": "^1.0.8",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.9.2",
    "prettier": "^3.2.5",
    "tsx": "^4.20.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  }
}
