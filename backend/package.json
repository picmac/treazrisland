{
  "name": "treazrisland-backend",
  "version": "0.1.0",
  "description": "Fastify + Prisma backend for the TREAZRISLAND self-hosted portal.",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "prebuild": "npm run prisma:generate",
    "build": "tsc -p tsconfig.build.json",
    "lint": "npm run format:check",
    "format:check": "prettier --check \"src/config/env.ts\" \"src/routes/admin/romUploads.ts\" \"src/routes/player.ts\" \"src/routes/screenscraper.ts\" \"src/server.ts\" \"src/server.observability.test.ts\" \"src/types/fastify.d.ts\" \"src/plugins/metrics.ts\" \"src/plugins/health.ts\" \"src/plugins/logging.ts\"",
    "format:write": "prettier --write \"src/config/env.ts\" \"src/routes/admin/romUploads.ts\" \"src/routes/player.ts\" \"src/routes/screenscraper.ts\" \"src/server.ts\" \"src/server.observability.test.ts\" \"src/types/fastify.d.ts\" \"src/plugins/metrics.ts\" \"src/plugins/health.ts\" \"src/plugins/logging.ts\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "prisma:ensure-command-state": "node scripts/ensure-prisma-command-state.mjs",
    "prisma:generate": "npm run prisma:ensure-command-state && prisma generate",
    "prisma:migrate": "npm run prisma:ensure-command-state && prisma migrate dev && tsx prisma/migrate-reencrypt-mfa-secrets.ts",
    "prisma:repair": "node prisma/scripts/resolve-failed-migrations.mjs",
    "db:prepare": "npm run prisma:ensure-command-state && npm run prisma:repair && prisma migrate deploy && npm run prisma:seed:platforms:if-available",
    "screenscraper:encrypt": "tsx scripts/encrypt-screenscraper-secret.ts",
    "prisma:seed:platforms": "tsx prisma/seed/platforms.ts",
    "prisma:seed:platforms:if-available": "node scripts/run-platform-seed-if-available.mjs",
    "prisma:seed:roms": "tsx prisma/seed/roms.ts",
    "prisma:seed:smoke": "tsx prisma/seed-test-fixtures.ts",
    "retention:prune": "tsx scripts/retention/prune-rom-upload-audit.ts",
    "storage:health": "tsx scripts/storage/health-check.ts"
  },
  "dependencies": {
    "@fastify/cors": "8.5.0",
    "@fastify/jwt": "7.2.4",
    "@fastify/rate-limit": "8.1.1",
    "@fastify/sensible": "5.6.0",
    "@fastify/under-pressure": "8.5.2",
    "@prisma/client": "6.19.0",
    "argon2": "0.44.0",
    "busboy": "1.6.0",
    "dotenv": "17.2.3",
    "fastify": "4.29.1",
    "fastify-plugin": "4.5.1",
    "ipaddr.js": "2.2.0",
    "ms": "2.1.3",
    "nodemailer": "7.0.10",
    "pino": "10.1.0",
    "prisma": "6.19.0",
    "socket.io": "4.8.1",
    "socket.io-client": "4.8.1",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@types/busboy": "1.5.4",
    "@types/estree": "1.0.8",
    "@types/ms": "2.1.0",
    "@types/node": "22.19.0",
    "@types/nodemailer": "7.0.3",
    "@types/nodemailer-smtp-transport": "2.7.8",
    "prettier": "3.6.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vitest": "4.0.8"
  }
}
