// Prisma schema for Treazrisland backend
// Defines the PostgreSQL datasource and Prisma Client generator.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RomAssetType {
  ROM
  COVER
  ARTWORK
  MANUAL
}

enum SessionStatus {
  ACTIVE
  REVOKED
  EXPIRED
}

model Platform {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roms Rom[]

  @@index([name])
}

model Rom {
  id          String   @id @default(cuid())
  title       String
  description String?
  releaseYear Int?
  platformId  String
  genres      String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  platform  Platform    @relation(fields: [platformId], references: [id], onDelete: Cascade)
  assets    RomAsset[]
  saves     SaveState[]
  favorites Favorite[]

  @@index([platformId])
}

model RomAsset {
  id          String       @id @default(cuid())
  romId       String
  type        RomAssetType
  uri         String
  objectKey   String
  checksum    String       @unique
  contentType String
  size        Int
  createdAt   DateTime     @default(now())

  rom Rom @relation(fields: [romId], references: [id], onDelete: Cascade)

  @@index([romId])
  @@index([type])
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  username     String    @unique
  displayName  String?
  passwordHash String
  lastLoginAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  sessions        Session[]
  invites         Invite[]    @relation("InviteCreatedBy")
  redeemedInvites Invite[]    @relation("InviteRedeemedBy")
  saveStates      SaveState[]
  favorites       Favorite[]
  avatarObjectKey String?
}

model Invite {
  id           String    @id @default(cuid())
  code         String    @unique
  email        String?
  createdById  String?
  createdAt    DateTime  @default(now())
  expiresAt    DateTime?
  redeemedAt   DateTime?
  redeemedById String?

  createdBy  User? @relation("InviteCreatedBy", fields: [createdById], references: [id])
  redeemedBy User? @relation("InviteRedeemedBy", fields: [redeemedById], references: [id])
}

model Session {
  id           String        @id @default(cuid())
  userId       String
  sessionToken String        @unique
  status       SessionStatus @default(ACTIVE)
  createdAt    DateTime      @default(now())
  expiresAt    DateTime?
  revokedAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SaveState {
  id        String   @id @default(cuid())
  userId    String
  romId     String
  slot      Int      @default(0)
  label     String?
  objectKey String
  checksum  String
  contentType String
  size      Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  rom  Rom  @relation(fields: [romId], references: [id], onDelete: Cascade)

  @@unique([userId, romId, slot])
  @@index([romId])
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  romId     String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  rom  Rom  @relation(fields: [romId], references: [id], onDelete: Cascade)

  @@unique([userId, romId])
}
