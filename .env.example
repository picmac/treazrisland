# Treazr Island environment template
# Copy this file to `.env` when bootstrapping local Docker Compose services.

# Shared runtime configuration
NODE_ENV=development

# Backend service
BACKEND_PORT=4000
DATABASE_URL=postgresql://treazr:treazr@postgres:5432/treazr
REDIS_URL=redis://redis:6379/0
STORAGE_ENDPOINT=http://minio:9000
STORAGE_BUCKET=treazr-assets
STORAGE_ACCESS_KEY=treazr
STORAGE_SECRET_KEY=treazr_secret
EMULATOR_HOST=emulator
EMULATOR_PORT=4566

# Frontend service
FRONTEND_PORT=5173
VITE_API_BASE_URL=http://backend:4000
VITE_STORAGE_ENDPOINT=http://minio:9000

# Supporting services
POSTGRES_USER=treazr
POSTGRES_PASSWORD=treazr
POSTGRES_DB=treazr
POSTGRES_PORT=5432
REDIS_PORT=6379
MINIO_ROOT_USER=treazr
MINIO_ROOT_PASSWORD=treazr_secret
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
LOCALSTACK_SERVICES=sns,sqs
LOCALSTACK_DEBUG=0
LOCALSTACK_REGION=us-east-1
LOCALSTACK_EDGE_PORT=4566
