{
  "name": "treazrisland",
  "private": true,
  "engines": {
    "node": ">=22.11.0 <23",
    "pnpm": ">=10.23.0 <11"
  },
  "scripts": {
    "lint": "eslint \"{backend,frontend}/**/*.{js,jsx,ts,tsx}\" --max-warnings=0",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,scss,json,md,yml,yaml}\"",
    "prepare": "husky install",
    "cli:create-admin": "pnpm --filter backend create-admin",
    "cli:generate-invite": "pnpm --filter @treazrisland/backend cli:generate-invite",
    "typecheck": "pnpm --filter @treazrisland/backend run typecheck && pnpm --filter treazrisland-frontend run typecheck",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r run test:watch",
    "test:e2e": "./scripts/test-e2e.sh",
    "deploy:runner": "./scripts/deploy/self-hosted-runner.sh",
    "test:security-ack": "node tests/security-checklist-ack.test.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@next/eslint-plugin-next": "^16.0.3",
    "globals": "^16.5.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "@eslint/eslintrc": "^3.3.1",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.0.11",
    "prettier": "^3.3.2",
    "ts-node": "10.9.2",
    "yaml": "^2.7.0"
  },
  "pnpm": {
    "overrides": {
      "parse5": "7.1.2"
    }
  },
  "packageManager": "pnpm@10.23.0"
}
