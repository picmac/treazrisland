{
  "name": "treazrisland",
  "private": true,
  "engines": {
    "node": "20.14.0",
    "pnpm": "9.5.0"
  },
  "scripts": {
    "lint": "eslint \"{backend,frontend}/**/*.{js,jsx,ts,tsx}\" --max-warnings=0",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,scss,json,md,yml,yaml}\"",
    "prepare": "husky install",
    "cli:create-admin": "pnpm --filter @treazrisland/backend exec -- tsx src/cli/create-admin.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.11",
    "prettier": "^3.3.2"
  }
}
