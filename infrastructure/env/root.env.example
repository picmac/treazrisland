# Treazr Island environment template
# Copy this file to `.env` when bootstrapping local Docker Compose services.

# Shared runtime configuration
NODE_ENV=development

# Backend service
BACKEND_PORT=4000
DATABASE_URL=postgresql://treazr:treazr@postgres:5432/treazr
JWT_SECRET=dev_jwt_secret_value_that_is_at_least_32_chars
REDIS_URL=redis://redis:6379/0
OBJECT_STORAGE_ENDPOINT=minio
OBJECT_STORAGE_PORT=9000
OBJECT_STORAGE_USE_SSL=false
OBJECT_STORAGE_ACCESS_KEY=treazr
OBJECT_STORAGE_SECRET_KEY=treazr_secret
OBJECT_STORAGE_BUCKET=treazr-assets
OBJECT_STORAGE_REGION=us-east-1
OBJECT_STORAGE_PRESIGNED_TTL=300
EMULATORJS_HOST=emulatorjs
EMULATORJS_PORT=8080
EMULATORJS_REF=v4.2.3

# Frontend service
FRONTEND_PORT=5173
NEXT_PUBLIC_API_BASE_URL=/api
NEXT_INTERNAL_API_BASE_URL=http://backend:4000
NEXT_PUBLIC_EMULATOR_BASE_URL=/emulatorjs
NEXT_PUBLIC_EMULATOR_EMBED_URL=http://emulatorjs:80/dist/embed.js
EMULATORJS_BASE_URL=http://emulatorjs:80

# Supporting services
POSTGRES_USER=treazr
POSTGRES_PASSWORD=treazr
POSTGRES_DB=treazr
POSTGRES_PORT=5432
REDIS_PORT=6379
MINIO_ROOT_USER=treazr
MINIO_ROOT_PASSWORD=treazr_secret
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
